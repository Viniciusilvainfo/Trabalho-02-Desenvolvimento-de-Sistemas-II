<!DOCTYPE html>
<html lang="pt-br">

<%- include('includes/head') %>

<body>

    <%- include('includes/navbar') %>    

    <% if (user) { console.log(user) %>
      <h1>Bem vind@ <%= user[0].nome %></h1>
    <% } %>

    <h1>Lista de todos os grupos</h1>

    <table id="filmes">
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th></th>
        </tr>
        <% grupos.forEach(grupo => { %>
          <tr>
            <td><%= grupo.id %></td>
            <td><%= grupo.nome %></td>
            <td> <a href="/grupos/<%=grupo.id%>">Detalhes</a>  </td>
          </tr>
        <% }) %>
    </table>
</body>

</html>