<!DOCTYPE html>
<html lang="pt-br">

<%- include('includes/head') %>

<body>

    <%- include('includes/navbar') %>

    <% if(user != undefined) { %>

        
    <form class="mx-auto w-50 mt-5" action="/grupos"  method="POST">
        <h1>Criar Grupo</h1>
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="nome" class="form-control" id="nome" name="nome" required>
        </div>
        <input type="hidden" name="adm" value="<%= user.id %>">
        <button type="submit" class="btn btn-primary">Criar</button>
    </form>

    <% }else { %>
        <h3>Você não tem acesso a essa página</h3>
        <a href="/">Voltar</a>
    <% } %>

    <%- include('includes/script') %>    
</body>
</html>